<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>index</title>
    <link rel="stylesheet" href="css/lib/bootstrap.min.css">
    <link rel="stylesheet" href="css/index.css">
</head>
<body>
    <div class="container bs-docs-container">
        <% include nav.ejs %>
        <% if ( login ) { %>
            <div class="row">
                <div class="col-sm-6 col-md-4">
                    <div class="thumbnail" style="background:rgba(0,0,0,.7);">
                        <% if ( !!avatar ) { %>
                            <img src="<%= avatar %>" style="width:100px; height:100px;border-radius: 50%;"/>
                        <% } %>
                        <% if ( !avatar ) { %>
                            <img src="/timg.jpg" style="width:100px; height:100px;border-radius: 50%;"/>
                        <% } %>
                        <div class="caption">
                            <h3 class="text-center" style="color:#fff"><span style="color:#ff0000">欢迎！</span><span id="userName"><%= userName %></span></h3>
                        </div>
                    </div>
                </div>
                <ul id="chatroom" class="col-sm-6 col-md-8" style="border:1px solid #0000ff;height:600px"></ul>
            </div>
            <div class="container">
                <input type="text" style="width:100%;height:60px;font-size: 30px" id="msg" autofocus/>
                <button type="button" class="btn btn-primary" id="sendMsg">发 送 消 息</button>
            </div>
        <% } %>
    </div>
</body>
</html>
<script src="socket.io/socket.io.js"></script>
<script src="js/lib/jquery.min.js"></script>
<script src="js/index.js"></script>